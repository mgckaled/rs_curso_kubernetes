    "@nestjs/terminus": "^11.0.0",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "drizzle-orm": "^0.44.7",
    "fastify": "^5.6.2",
