  "version": "1.0.0",
  "description": "API universal para testes de recursos Kubernetes",
  "main": "dist/main.js",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
